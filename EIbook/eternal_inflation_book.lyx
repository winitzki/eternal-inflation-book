\begin_inset Formula 
\begin{align}
\partial_{t}P_{p} & =\hat{L}_{\phi}^{\dagger}P_{p}+3\left(H-\left\langle H\right\rangle \right)P_{p},\\
\left\langle H\right\rangle  & \equiv\int H(\phi)P_{p}(\phi,t)d\phi.
\end{align}

