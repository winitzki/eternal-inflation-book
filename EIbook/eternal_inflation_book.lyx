\begin_inset space ~
\end_inset

(
\begin_inset CommandInset ref
LatexCommand ref
reference "eq:combined ratios"

\end_inset

) become
\begin_inset Formula 
\begin{equation}
p(A):p(I):p(F):p(B)\approx1:\frac{1}{\nu^{2}}:\frac{1}{\nu}:\left[\frac{\eta}{\nu^{\nu-1}}\right]^{\frac{1}{\nu+1}}.\label{eq:ratios 2}
