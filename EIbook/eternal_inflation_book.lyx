\begin_inset space ~
\end_inset

(
\begin_inset CommandInset ref
LatexCommand ref
reference "eq:g equ with BB"

\end_inset

),
\begin_inset Formula 
\begin{equation}
\hat{M}(z)\left|\rho_{j}(z)\right\rangle =\left|\beta_{j}(z)\right\rangle ,\label{eq:M rho beta}
